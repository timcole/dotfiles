vim() {
  if [ -z "$1" ]
  then
   nvim +"Telescope git_files" 
  else
   nvim $1
  fi
}

gachi() {
  cd ~/Music/gachi/
  youtube-dl --ignore-errors --extract-audio --audio-format mp3 -o "%(title)s.%(ext)s" $1
}

interface() {
  echo $1 | quicktype -l typescript --just-types | pbcopy
}

test_https() {
  curl --insecure -vvI https://$1 -H "Host: $2" 2>&1 | awk 'BEGIN { cert=0 } /^\* SSL connection/ { cert=1 } /^\*/ { if (cert) print }'
}

mc_edit() {
  if [ -z "$1" ]
  then
    echo "What're you going to edit, the void?";
    echo "mc_edit <input>"
    echo "mc_edit <input> <output>"
  else
    # If no second arg make the output the same as the input
    if [ -z "$2" ]
    then
      2=$1
    fi
    TMP=$(openssl rand -base64 8 | tr -dc '[:alnum:]\n\r')
    mc cat $1 > /tmp/$TMP.${1##*.}
    $EDITOR /tmp/$TMP.${1##*.}
    mc cp /tmp/$TMP.${1##*.} $2
  fi
}

